<div class="content-centered">
  <h1>Admin Dashboard</h1>
  <p>Welcome, <%= current_user.email %></p>
  <section>
    <h2>Quick Stats</h2>
    Total Users: <%= User.count %>
  </br>
  Premium Subscriptions: <%= User.where(subscription_type: :premium).count %>
</section>
<section>
  <h2>Recent Signups</h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Subscription</th>
        <th>Signed Up At</th>
      </tr>
    </thead>
    <tbody>
      <% User.order(created_at: :desc).limit(10).each do |user| %>
        <tr>
          <td><%= user.name || 'N/A' %></td>
          <td><%= user.email %></td>
          <td>
            <span class="badge <%= user.premium? ? 'badge-premium' : 'badge-free' %>">
              <%= user.subscription_type.humanize %>
            </span>
          </td>
          <td><%= user.created_at.strftime("%b %d, %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
</div>
<style>
  .badge {
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 0.8em;
    font-weight: bold;
    text-transform: uppercase;
  }

  .badge-premium {
    background-color: #28a745;
    color: white;
  }

  .badge-free {
    background-color: #6c757d;
    color: white;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
  }

  th, td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  th {
    background-color: #f8f9fa;
    font-weight: bold;
  }

  tr:hover {
    background-color: #f5f5f5;
  }
</style>
